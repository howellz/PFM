@model IEnumerable<PFM.Models.Categories>
@{
    ViewData["Title"] = "Index";
}



<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">


<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div id="TabsSet1">

   
        <ul>
@foreach (var i in Model)
{
            <li><a href="#@i.CategoryName">@i.CategoryName</a></li>
}
        </ul>
@foreach (var i in Model)
{
        <div id=@i.CategoryName>
            <h1>Welcome to this test tab</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => i.Subcategories)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in i.Subcategories)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(Model => item.SubcategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

}
    </div>

<script>
$(function () {
$("#TabsSet1").tabs();
});
</script>