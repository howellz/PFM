@model IEnumerable<PFM.Models.Categories>
@{
    ViewData["Title"] = "Weekly Planner";
}





<h2>Weekly Planner @ViewBag.userID</h2>

<div id="TabsSet1">


    <ul>
        @foreach (var i in Model)
        {
            if (i.UserId == ViewBag.userID)
            {
            <li><a href="#@i.CategoryName">@i.CategoryName</a></li>
            }
        }

        <li><a asp-route-name=""  asp-route-id="@ViewBag.userID" asp-action="Create">+</a></li>
    </ul>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Edit">
                @foreach (var i in Model) 
                {
                    if (i.UserId == ViewBag.userID)
                    {
                       <a asp-area="" asp-action="Details" asp-route-userID="@ViewBag.userID" class ="btn btn-primary btn-lg">Some text</a>
                    <div id=@i.CategoryName>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => i.Subcategories)
                                    </th>

                                    <th>
                                        Budget
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in i.Subcategories)
                                {
                                    <tr>
                                        <td>
                                                <input type="hidden" asp-for="@item.SubcategoryId" />
                                                <input type="hidden" asp-for="@item.CategoryId" />
                                                <input asp-for="@item.SubcategoryName" class="form-control" />
                                                <span asp-validation-for="@item.SubcategoryName" class="text-danger"></span>
                                        </td>
                                        <td>
                                            <input type="hidden" asp-for="@item.SubcategoryId" />
                                            <input asp-for="@item.Value" class="form-control" />
                                            <span asp-validation-for="@item.Value" class="text-danger"></span>
                                        </td>
                                        <td>

                                            <a asp-area="" asp-controller="Subcategories" asp-action="Edit" asp-route-id="@item.SubcategoryId">Edit</a>
                                            <a asp-area="" asp-controller="Subcategories" asp-action="Delete" asp-route-id="@item.SubcategoryId" >Delete</a>
                                            <a asp-area="" asp-controller="Subcategories" asp-action="Details" asp-route-id="@item.SubcategoryId">Transactions</a>
                                        </td>

                                    </tr>
                                }
                        </tbody>
                            <tfoot>
                                <tr>
                                    <td>

                                        <a asp-area="" asp-controller="Subcategories" asp-route-userID="@ViewBag.userID" asp-action="Create">Add subcategory</a>
                                    </td>
                                    <td>
                                        <a asp-route-name="" asp-route-id="@i.CategoryId" asp-action="Delete">Delete category</a>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    }
                }
                
            </form>

        </div>

            <script>
                $(function () {
                    $("#TabsSet1").tabs();
                });
            </script>
