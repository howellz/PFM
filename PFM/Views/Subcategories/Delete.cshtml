@model PFM.Models.Subcategories

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Subcategory</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Subcategory Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SubcategoryName)
        </dd>
        <dt>
            Category
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt>
            Budget
        </dt>
        <dd>
            $@Html.DisplayFor(model => model.Value)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SubcategoryId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-controller="Categories" asp-route-userID="@Model.Category.UserId" asp-action="Index">Back to planner</a>
    </form>
</div>
