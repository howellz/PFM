@model PFM.Models.Subcategories

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.SubcategoryName)'s Transactions</h2>

<div>

    <h4>Budget: @Html.DisplayFor(model => model.Value)</h4>
    <hr />  
    
    <dl class="dl-horizontal">

        <dt>Total deductions:</dt>
        <dd>$@ViewData["ds"]</dd>
        <dt></dt>
        @foreach (var i in Model.Transactions)
        {
            <dt>Deduction:</dt>
            <dd>
                $@Html.DisplayFor(model => i.Value)
            </dd>

        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SubcategoryId">Edit</a> |
    <a asp-controller="Categories" asp-route-userID="@Model.Category.UserId" asp-action="Index">Back to planner</a>
</div>
