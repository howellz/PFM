@model PFM.Models.Subcategories

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Subcategory</h4>
<hr />
<h2 class="form-group" style="color:#FF0000">@ViewBag.emssg</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubcategoryId" />
            <div class="form-group">
                Category
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                Budget
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                Subcategory Name
                <input asp-for="SubcategoryName" class="form-control" />
                <span asp-validation-for="SubcategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Categories" asp-route-userID="@Model.Category.UserId" asp-action="Index">Back to planner</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
